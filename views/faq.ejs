<!DOCTYPE html>
<html lang="en">
    <%- include("partials/head") %>
    <body>
        <div id="preloader"></div>
        <div class="up">
            <a href="#" class="scrollup text-center"><i class="fas fa-chevron-up"></i></a>
        </div>
        <!-- Start of header section ======================================= -->
        <%- include("partials/header") %>
        <!-- End of header section ========================================= -->

        <!-- Start of Breadcrumb section =================================== -->
        <%- include("partials/breadcrumb", { pageTitle: "FAQ" }) %>
        <!-- End of Breadcrumb section ===================================== -->

        <!-- Start of FAQ page section ===================================== -->
        <section id="ft-faq-page" class="ft-faq-page-section page-padding">
            <div class="container">
                <div class="ft-faq-page-top-content d-flex justify-content-between align-items-end flex-wrap">
                    <div class="ft-section-title-2 headline pera-content">
                        <h2>
                            Discover Frequently Asked Questions from
                            <span>Our Support</span>
                        </h2>
                    </div>
                    <div class="ft-btn-3">
                        <a class="d-flex justify-content-center align-items-center" href="/contact"
                            >Get a Query <i class="flaticon-right-arrow"></i
                        ></a>
                    </div>
                </div>
                <div class="ft-faq-content">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="accordion" id="accordionExample">
                                <% faqs.forEach((faq, index) => { %>
                                <div class="accordion-item headline pera-content">
                                    <h2 class="accordion-header" id="<%= faq.h2Id %>">
                                        <button
                                            class="accordion-button <%= index === 0 ? '' : 'collapsed' %>"
                                            type="button"
                                            data-bs-toggle="collapse"
                                            data-bs-target="<%= faq.dataBsTarget %>"
                                            aria-expanded="true"
                                            aria-controls="<%= faq.ariaControls %>"
                                        >
                                            <%= faq.question %>
                                        </button>
                                    </h2>
                                    <div
                                        id="<%= faq.ariaControls %>"
                                        class="accordion-collapse collapse <%= index === 0 ? 'show' : '' %>"
                                        aria-labelledby="<%= faq.h2Id %>"
                                        data-bs-parent="#accordionExample"
                                    >
                                        <div class="accordion-body"><%= faq.answer %></div>
                                    </div>
                                </div>
                                <% }); %>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="ft-faq-contact-form-wrapper">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="ft-faq-contact-form-area">
                                <div class="ft-section-title-2 headline pera-content">
                                    <span class="sub-title">Get in Touch</span>
                                    <h2>Have Any Query</h2>
                                </div>
                                <form action="#">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <input type="text" placeholder="Your Name" />
                                        </div>
                                        <div class="col-md-6">
                                            <input type="email" placeholder="Your Email" />
                                        </div>
                                        <div class="col-md-12">
                                            <input type="text" placeholder="Company Name" />
                                        </div>
                                        <div class="col-md-12">
                                            <textarea name="#" placeholder="Your Query"></textarea>
                                        </div>
                                        <div class="col-md-12">
                                            <button class="ft-submit-btn">
                                                Submit Now <i class="flaticon-right-arrow"></i>
                                            </button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="ft-faq-form-img">
                                <img src="/img/bg/faq.png" alt="" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- End of FAQ page section ======================================= -->

        <!-- Start of footer section ======================================= -->
        <%- include("partials/footer") %>
        <!-- End of footer section ========================================= -->

        <!-- For JS libraries -->
        <%- include("partials/js-libraries") %>
    </body>
</html>
